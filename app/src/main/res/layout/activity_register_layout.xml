    <!--新密码-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginEnd="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_login_input_back">

        <TextView
            android:id="@+id/des_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:contentDescription="@null"
            android:text="@string/password"
            android:textColor="@color/black_333333"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/pass_code_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/des_tv"
            android:background="@color/transparent"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="@string/please_input_password"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="16"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/gray_b4b4b4"
            android:textSize="17sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/confirm_tv"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginEnd="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/shape_login_text_back"
        android:gravity="center"
        android:text="@string/confirm_one"
        android:textColor="@drawable/selector_charge_text_color"
        android:textSize="17sp" />

    <LinearLayout
