<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <!--登录-->
        <TextView
            android:id="@+id/login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="9dp"
            android:padding="6dp"
            android:text="@string/login_one"
            android:textColor="@color/red_fe2947"
            android:textSize="17sp" />

        <View
            android:id="@+id/pass_v"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="@color/red_fe2947"
            android:visibility="gone" />

        <!--注册-->
        <TextView
            android:id="@+id/register_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="9dp"
            android:layout_marginStart="6dp"
            android:gravity="end"
            android:padding="6dp"
            android:text="@string/register"
            android:textColor="@color/red_fe2947"
            android:textSize="17sp"
            android:visibility="gone" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:background="@drawable/logo_one"
        android:contentDescription="@null" />

    <!--手机号码-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginEnd="38dp"
        android:layout_marginStart="38dp"
        android:background="@drawable/shape_login_input_back">

        <TextView
            android:id="@+id/aa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:contentDescription="@null"
            android:text="@string/phone_num_des"
            android:textColor="@color/black_333333"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/mobile_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/aa"
            android:background="@color/transparent"
            android:digits="0123456789"
            android:hint="@string/please_input_phone_login"
            android:inputType="number"
            android:lines="1"
            android:maxLength="11"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/gray_b4b4b4"
            android:textSize="17sp" />

    </RelativeLayout>

