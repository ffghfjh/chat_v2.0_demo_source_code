<resources>

    <!--  application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/blue_1aacf7</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置无边框 -->
        <!-- <item name="android:windowFrame">@null</item> -->
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置为浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置动画 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 点击空白部分消失 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="DialogStyle_Dark_Background" parent="Theme.AppCompat.Light.Dialog">
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置无边框 -->
        <!-- <item name="android:windowFrame">@null</item> -->
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置为浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置动画 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 点击空白部分消失 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!--横向分割线-->
    <style name="HorizontalDivideLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#E3E2E2</item>
    </style>

    <!--星星评价-->

    <!--星星评价红色-->
    <style name="myRatingBarRed" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars_red</item>
        <item name="android:minHeight">11.5dip</item>
        <item name="android:minWidth">12dip</item>
        <item name="android:maxWidth">12dip</item>
        <item name="android:maxHeight">11.5dip</item>
    </style>

    <!--星星评价-->
    <style name="myRatingBarBig" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/big_rating_stars</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:minWidth">35dip</item>
        <item name="android:maxWidth">35dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <!--dialog从底部弹出-->
    <style name="BottomPopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="tabText" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
